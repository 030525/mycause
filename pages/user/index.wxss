.page{
  background: #f5f5f5;
  height: 100vh
}


.top{
  position: relative;
  background: #3a4861;
  width: 100%;
  padding: 30rpx 0;
  height: 500rpx;
}

.back{
  position: absolute;
  top: 0px; /* 与父组件顶部距离 */
  right: 0px; /* 与父组件右侧距离 */
  bottom: 0px; /* 与父组件底部距离 */
  left: 0px; /* 与父组件左侧距离 */
  

  width: 100%;
  height: 100%;
}

.img{
  background-color: #ccc;
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;

  width: 200rpx;
  height: 200rpx;
  border-radius: 40%;
  border: 6rpx solid;
}

.lists{
  position: relative;
  left: 5%;
  background: #ffffff;
  width: 90%;
  border-radius: 5%;
}

.all{
  height: 100rpx;
  line-height: 3; 

  padding-left: 20rpx;
  height: 8vh;
  border-bottom: 1rpx solid #d8d8d8;
}

.arrow{
  height: 5vh;
}

.row{
  display: flex;
  justify-content: space-between;
}

.state{
  flex: 1;
  line-height:3;

  height: 110rpx;
  text-align: center;
  border-right: 3rpx solid #dfdfdf;
}

.state1{
  flex: 1;
  line-height: 3; 

  height: 110rpx;
  text-align: center;
}

.contract{
  position: relative;
  margin-top: 30rpx;
  left: 5%;
  background: #ffffff;
  width: 90%;
  height: 8vh;
  border-radius: 5%;
  line-height: 3;
  text-align: center;
  font-weight: bold;
  font-size: larger;
}

.login{
  position: relative;
  margin-top: 50rpx;
  left: 5%;
  background: #ffffff;
  width: 90%;
  height: 8vh;
  border-radius: 5%;
  line-height: 3;
  text-align: center;
  font-weight: bold;
  font-size: larger;
}