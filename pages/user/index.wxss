.top{
  position: relative;
  background: #3a4861;
  width: 100%;
  padding: 30rpx 0;
  height: 500rpx;
}

.user-img{
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  width:300rpx;
}

.back{
  position: absolute;
  top: 0px; /* 与父组件顶部距离 */
  right: 0px; /* 与父组件右侧距离 */
  bottom: 0px; /* 与父组件底部距离 */
  left: 0px; /* 与父组件左侧距离 */
  

  width: 100%;
  height: 100%;
}

.img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 40%;
  border: 6rpx solid;
}

.menu .item{
  height: 110rpx;
  line-height: 110rpx;
  border-bottom: 2rpx solid #ccc;
  padding: 0 40rpx;
  font-size: 40rpx;
}