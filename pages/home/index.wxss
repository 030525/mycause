.content{
  flex: 1;
  display: flex;
  overflow: hidden;
}

.category{
  flex: 1;
  width: 200rpx;
  height: 100vh;
  background: #f5f5f5;
  font-size: 30rpx;

  border-bottom: 3rpx solid #f5f5f5;
  border-top: 3rpx solid #f5f5f5;
}


.category-item{
  border-bottom: 3rpx solid #ffffff;
  height: 10vh;
  line-height: 100rpx;
  text-align: center;
}

.category-item.select{
  background: #ffffff;
  border-bottom: 3rpx solid #ffffff;
  border-left: 20rpx solid #f07146;
  height: 10vh;
  line-height: 100rpx;
  text-align: center;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.right{
  border-bottom: 3rpx solid #f5f5f5;
  border-top: 3rpx solid #f5f5f5;
  width: 550rpx;
  background: #ffffff;
  height: 100vh;
}

.right-items{
  display: flex;
  flex-wrap: wrap;
  align-self:flex-start;
}

.one-item{
  text-align: center;
  line-height: 5;
  width: 177rpx;
  height: 177rpx;
  font-size: larger;
  font-weight: bold; 
  letter-spacing: 3rpx;
}

.one-item-rest-3{
  text-align: center;
  line-height: 5;
  width: 177rpx;
  height: 177rpx;
  font-size: larger;
  font-weight: bold; 
}

.null-item{
  width: 177rpx;
  height: 177rpx;
  border-bottom: 3px solid #eee;
}

.edit{
  position: fixed;
    bottom: 100rpx; /* 与父组件底部的距离 */
    right: 70rpx; /* 与父组件右边的距离 */
    width: 150rpx; /* 按钮的宽度 */
    height: 150rpx; /* 按钮的高度 */
    border-radius: 50%; /* 将按钮的形状设置为圆形 */
    background-color: #f07146; /* 按钮的背景颜色 */
    text-align: center;
    color: #ffffff;
    line-height: 1.3;
    font-size: 106rpx;
    font-weight: bold; 

}